  <!-- Features Widget *************** -->

  <Features
    highlight=""
    title="Key Outcomes"
    subtitle=""
    items={[
      [
        {
          title: 'Catalog of variants',
          description: 'A catalog of somatic variants in select tissues from diverse human donors',
          icon: 'tabler:components',
        }],[
        {
          title: 'New tools and analysis methods',
          description:
            'Innovative sequencing tools and analysis methods that optimize variant detection',
          icon: 'tabler:bulb',
        },
      ],
        [
        {
          title: 'Comprehensive resources',
          description:
            'Fundamentally new ways of understanding the contribution of somatic variation to human biology',
          icon: 'tabler:arrows-right-left',
        },
      ],
      [
        {
          title: 'A SMaHT data workbench',
          description: 'A SMaHT data workbench that seamlessly integrates with current tools to study DNA sequences, like genome browsers, and combines analysis of somatic variation with the current human eference genome',
          icon: 'tabler:list-check',
        }],
    ]}
  />

